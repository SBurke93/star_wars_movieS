<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); -%>
</head>
<body>


<nav class="navbar navbar-fixed-top">

<div class="content-padding">
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/">Home</a></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Movies <i class="fa fa-chevron-down"></i></a>
            <ul class="dropdown-menu">
                <% for (var i = 0; i < movies.length; i++) { %>
                <li><a href="/star_wars_episode/<%= i + 1 %>" class="episode_link"><%= movies[i].title %></a></li>
                <% } %>
            </ul>
        </li>
    </ul>
</div>

</nav>


<div id="hero-image-single" style="background-image: url('/images/<%= movie.hero_image %>')">
    <h1 id="hero-title"><%= title %></h1>
</div>

<div class="content-padding clearfix">
    <div class="poster-wrapper">
        <img src="/images/<%= movie.poster %>" class="image-responsive">
    </div>
    <div class="description-wrapper">
        <div class="description">
            <h2 class="movie-header">Description</h2>
            <p><%= movie.description %></p>
        </div>
        <div class="main-characters">
            <h2 class="movie-header">Main Characters</h2>
            <ul>
                <% for (var i = 0; i < main_characters.length; i++) { %>
                    <li><%= main_characters[i] %></li>
                <% } %>
            </ul>
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>
<%- include('partials/scripts'); -%>
</body>
</html>